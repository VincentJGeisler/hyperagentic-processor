# Hyperagentic Processor Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM Configuration (Required)
# =============================================================================
# Groq API key for LLM access (Llama 3.3 70B)
GROQ_API_KEY=your_groq_api_key_here

# =============================================================================
# Web Search API Keys (At least one required for Phase 1 MCP functionality)
# =============================================================================
# Brave Search API - Primary provider (2,000 queries/month free tier)
# Get your API key at: https://api.search.brave.com/
BRAVE_API_KEY=your_brave_api_key_here

# Tavily AI Search - Secondary provider (1,000 requests/month free tier)
# Get your API key at: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# SerpAPI - Fallback provider (100 free searches/month)
# Get your API key at: https://serpapi.com/
SERPAPI_KEY=your_serpapi_key_here

# =============================================================================
# MCP Discovery (Optional - for Phase 3)
# =============================================================================
# GitHub Personal Access Token for MCP server discovery
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# =============================================================================
# Oracle Configuration (Optional)
# =============================================================================
# Path to MCP configuration file (default: .kiro/settings/mcp.json)
ORACLE_CONFIG_PATH=.kiro/settings/mcp.json

# Logging level (DEBUG, INFO, WARNING, ERROR)
ORACLE_LOG_LEVEL=INFO

# =============================================================================
# Security (Optional)
# =============================================================================
# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ORACLE_ENCRYPTION_KEY=your_encryption_key_here

# Enable/disable sandbox mode (true/false)
ORACLE_ENABLE_SANDBOX=true

# =============================================================================
# Resource Limits (Optional)
# =============================================================================
# Maximum memory for MCP servers in MB
ORACLE_MAX_MEMORY_MB=300

# Maximum number of concurrent MCP processes
ORACLE_MAX_MCP_PROCESSES=5

# =============================================================================
# Notes
# =============================================================================
# - At minimum, you need GROQ_API_KEY and one web search API key
# - For full functionality, set BRAVE_API_KEY (best option)
# - TAVILY_API_KEY is a good alternative with AI-optimized results
# - SERPAPI_KEY can be used as a fallback
# - All search providers have free tiers suitable for development
